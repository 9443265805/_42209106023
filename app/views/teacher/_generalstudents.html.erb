<div class="panel">
<%= form_tag markstudents_teacher_index_path ,:method => :put do %> 

<table class="scroll-table pagination-table" >
<tr>
<th>tag Students</th>
<th>Name</th>
<th>Age</th>
<th>School</th>
</tr>
<% for student in @students %>
<tr>
<td><%= check_box_tag "generalstudent_ids[]", student.id %> </td>
<td><%= student.name %></td>	
<td><%=student.age %></td>
<td><%=student.school %></td>
</tr>
<% end %>
</table>
<% if @students_count >  10 %>
<div class="apple_pagination">
<%= will_paginate @students  %>
</div>
<% end %>
<br>
<div class="cleaner"></div>
<%= submit_tag "Tag Students"  , class: "small button radius"%> 
<% end %>
</div>