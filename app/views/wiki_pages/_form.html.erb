<%= form_for(@page ,  html: { class: :custom  } ) do |f| %>
<% if @page.errors.any? %>
 <div class="form-error-spacer"><ul><% @page.errors.full_messages.each do |msg|	%>
<li><%= msg %></li></div>
<% end %>
<% end %>

  <%= f.hidden_field :author , :value => "#{current_user.name}" %>
  
    <%= f.label :title %><br />
    <%= f.text_field :title , :placeholder=> "MyWikiTitle" , :required => true %>
  
  
    <%= f.label :content %><br />
    <%= f.cktext_area :content  , :placeholder=> "Your Content goes here" , :required => true  %>
  <br>

 <%= f.submit "Submit" %>
 
<% end %>