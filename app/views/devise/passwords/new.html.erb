<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post ,class: :custom  }) do |f| %>
  <%= devise_error_messages! %>
   
  <div class="row collapse">
  <div class="small-3 columns">
  <%= f.label :email  , class: "right inline" %></div>
  <div class="small-3 columns end">
  <%= f.email_field :email, autofocus: true ,:required => true  %>
  </div>
  </div>

 <div class="row collapse">
  <div class="small-3 small-offset-3 columns end" ><%= f.submit  "Send me reset password instructions"   , class: 'small button radius'  %></div>
  </div>
  
<% end %>

<%= render "devise/shared/links" %>
