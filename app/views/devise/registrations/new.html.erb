<div class="row">
  <div class="small-offset-1 small-7 columns end ">
    <div class="title-spacer"></div>
<div class="text-center small-heading">Sign Up</div>
<div class="panel">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name) , html: { class: :custom   } )   do |f| %>
  <%= devise_error_messages! %>
  
  <div class="row collapse">
  <div class="small-4 columns">
  <%= f.label :name , class: "right inline"  %></div>
  <div class="small-8 columns ">
  <%= f.text_field :name , :required => true %>
  </div>
  </div>


  <div class="row collapse">
  <div class="small-4 columns">
  <%= f.label :age , class: "right inline" %></div>
  <div class="small-8 columns ">
  <%= f.number_field :age ,:min =>  5,:max => 60 , :required => true %>
  </div>
  </div>

  <div class="row collapse">
  <div class="small-4 columns">
  <%= f.label :email , class: "right inline" %></div>
  <div class="small-8 columns ">
  <%= f.email_field :email, autofocus: true , :required => true %>
  </div>
  </div>

  <div class="row collapse">
  <div class="small-4 columns">
  <%= f.label :password  , class: "right inline" %></div>
  <div class="small-8 columns ">
  <%= f.password_field :password, autocomplete: "off", :required => true %>
  </div>
  </div>

  <div class="row collapse">
  <div class="small-4 columns">
  <%= f.label :password_confirmation  , class: "right inline" %></div>
  <div class="small-8 columns ">
  <%= f.password_field :password_confirmation, autocomplete: "off" , :required => true%>
  </div>
  </div>

  <div class="row collapse">
  <div class="small-4 columns">
  <%=f.label :role  , class: "right inline" %></div>
  <div class="small-8 columns ">
  <%= f.select :role,["Admin","Teacher","Student"] %></div>
  </div>

  <div class="row collapse">
  <div class="small-4 columns">
  <%= f.label :school  , class: "right inline" %></div>
  <div class="small-8 columns ">
  <%=f.text_field :school , :required => true %>  </div>
  </div>

  <div class="row collapse">
  <div class="small-4 columns">
  <%= f.label :Profile_Picture  , class: "right inline" %></div>
  <div class="small-8 columns ">
  <%=f.file_field :avatar  %></div>
  </div>

  <div class="row collapse">
  <div class="small-4 columns">
  <%= f.label :phonenumber , class: "right inline" %></div>
  <div class="small-8 columns ">
  <%= f.number_field :phonenumber , :required => true%> </div>
  </div>

<div class="row collapse">
  <div class="small-8 small-offset-4 columns end" ><%= f.submit "Sign up" , class: 'small button radius'  %></div>
</div>

<% end %>
<div class="text-center">
<%= render "devise/shared/links" %>
</div>
</div></div></div>