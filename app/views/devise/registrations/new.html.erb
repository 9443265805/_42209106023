<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name) , html: { class: :custom } )   do |f| %>
  <%= devise_error_messages! %>
  
  <div class="row collapse">
  <div class="small-3 columns">
  <%= f.label :name , class: "right inline"  %></div>
  <div class="small-9 columns">
  <%= f.text_field :name %></div>
  </div>


  <div class="row collapse">
  <div class="small-3 columns">
  <%= f.label :age , class: "right inline" %></div>
  <div class="small-9 columns">
  <%= f.number_field :age ,:min =>  5,:max => 60 %></div>
  </div>

  <div class="row collapse">
  <div class="small-3 columns">
  <%= f.label :email , class: "right inline" %></div>
  <div class="small-9 columns">
  <%= f.email_field :email, autofocus: true %></div>
  </div>

  <div class="row collapse">
  <div class="small-3 columns">
  <%= f.label :password  , class: "right inline" %></div>
  <div class="small-9 columns">
  <%= f.password_field :password, autocomplete: "off" %></div>
  </div>

  <div class="row collapse">
  <div class="small-3 columns">
  <%= f.label :password_confirmation  , class: "right inline" %></div>
  <div class="small-9 columns">
  <%= f.password_field :password_confirmation, autocomplete: "off" %></div>
  </div>

  <div class="row collapse">
  <div class="small-3 columns">
  <%=f.label :role  , class: "right inline" %></div>
  <div class="small-9 columns">
  <%= f.select :role,["Admin","Teacher","Student"] %></div>
  </div>

  <div class="row collapse">
  <div class="small-3 columns">
  <%= f.label :school  , class: "right inline" %></div>
  <div class="small-9 columns">
  <%=f.text_field :school  %></div>
  </div>

  <div class="row collapse">
  <div class="small-3 columns">
  <%= f.label :Profile_Picture  , class: "right inline" %></div>
  <div class="small-9 columns">
  <%=f.file_field :avatar  %></div>
  </div>

  <div class="row collapse">
  <div class="small-3 columns">
  <%= f.label :phonenumber , class: "right inline" %></div>
  <div class="small-9 columns">
  <%= f.number_field :phonenumber %></div>
  </div>

<div class="row collapse">
  <div class="small-9 small-offset-3 columns" ><%= f.submit "Sign up" , class: 'small button radius'  %></div>
</div>

<% end %>

<%= render "devise/shared/links" %>
