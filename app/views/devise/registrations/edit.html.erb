<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="row collapse">
  <div class="small-3 columns">
  <%= f.label :name  , class: "right inline" %></div>
  <div class="small-9 columns">
  <%= f.text_field :name %></div>
  </div>



  <div class="row collapse">
  <div class="small-3 columns">
  <%= f.label :age , class: "right inline"  %></div>
  <div class="small-9 columns" >
  <%= f.number_field :age ,:min =>  5,:max => 60 %></div>
  </div>

  <div class="row collapse">
  <div class="small-3 columns">
  <%= f.label :email , class: "right inline"  %></div>
  <div class="small-9 columns">
  <%= f.email_field :email, autofocus: true %></div>
</div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="row collapse">
  <div class="small-3 columns">
  <%= f.label :password, class: "right inline"  %> <i>(leave blank if you don't want to change it)</i></div>
  <div class="small-9 columns">
  <%= f.password_field :password, autocomplete: "off" %></div>
  </div>

  <div class="row collapse">
  <div class="small-3 columns">
  <%= f.label :password_confirmation, class: "right inline"  %></div>
  <div class="small-9 columns">
  <%= f.password_field :password_confirmation, autocomplete: "off" %></div>
  </div>

  <div class="row collapse">
  <div class="small-3 columns">
  <%= f.label :current_password , class: "right inline" %> <i>(we need your current password to confirm your changes)</i></div>
  <div class="small-9 columns">
  <%= f.password_field :current_password, autocomplete: "off" %></div>
  </div>
  
  <div class="row collapse">
  <div class="small-3 columns">
  <%=f.label :role, class: "right inline"  %></div>
  <div class="small-9 columns">
  <%= f.select :role,["Admin","Teacher","Student"] %></div>
  </div>

  <div class="row collapse">
  <div class="small-3 columns">
  <%= f.label :school, class: "right inline"  %></div>
  <div class="small-9 columns">
  <%=f.text_field :school  %></div>
  </div>

  <div class="row collapse">
  <div class="small-3 columns">
  <%= f.label :phonenumber, class: "right inline"  %><div class="small-9 columns">
  <%= f.number_field :phonenumber %></div>
  </div>

  <div><%= f.submit "Update"  , class: "small button radius" %></div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete  , class: "small button radius" %></p>

<%= link_to "Back", :back  , class: "small button radius"%>
