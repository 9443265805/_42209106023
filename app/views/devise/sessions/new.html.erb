<h2>Sign in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)  ) do |f| %>
  <div class="row collapse">
  <div class="small-3 columns"><%= f.label :email, class: "right inline"  %>
  </div>
  <div class="small-3 columns end">
  <%= f.email_field :email, autofocus: true ,:required => true  %>
  </div>
  </div>

  <div class="row collapse">
  <div class="small-3 columns"><%= f.label :password , class: "right inline" %>
  </div>
  <div class="small-3 columns end">
    <%= f.password_field :password, autocomplete: "off", class: "right inline" , :required => true %>
  </div>
  </div>

  <% if devise_mapping.rememberable? -%>
  <div class="row collapse">
  <div class="small-3 columns"><%= f.check_box :remember_me  , class: "right inline"%></div>
  <div class="small-3 columns end"> <%= f.label :remember_me %></div>
  </div>
  <% end -%>
	
  <div class="row collapse">
  <div class="small-3 small-offset-3 columns end" ><%= f.submit "Sign in"   , class: 'small button radius'  %></div>
  </div>
 
<% end %>

<%= render "devise/shared/links" %>
