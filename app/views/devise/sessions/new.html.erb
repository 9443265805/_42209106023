<h2>Sign in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)  html: {  class: :custom , data: {abide: ''} } ) do |f| %>
  <div class="row collapse">
  <div class="small-3 columns"><%= f.label :email, class: "right inline"  %>
  </div>
  <div class="small-9 columns">
  <%= f.email_field :email, autofocus: true  , :required => true %>
  <%= content_tag(:small, "This field is required", class: "error") %></div>
  </div>

  <div class="row collapse">
  <div class="small-3 columns"><%= f.label :password , class: "right inline" %>
  </div>
  <div class="small-9 columns">
    <%= f.password_field :password, autocomplete: "off", class: "right inline"  , :required => true %>
    <%= content_tag(:small, "This field is required", class: "error") %></div>
  </div>

  <% if devise_mapping.rememberable? -%>
  <div class="row collapse">
  <div class="small-3 columns"><%= f.check_box :remember_me  , class: "right inline"%></div>
  <div class="small-9 columns"> <%= f.label :remember_me %></div>
  </div>
  <% end -%>
	
  <div class="row collapse">
  <div class="small-9 small-offset-3 columns" ><%= f.submit "Sign in"   , class: 'small button radius'  %></div>
  </div>
 
<% end %>

<%= render "devise/shared/links" %>
