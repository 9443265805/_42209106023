<h2>Resend unlock instructions</h2>

<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post method: :put , class: :custom  }) do |f| %>
  <%= devise_error_messages! %>
 <div class="row collapse">
  <div class="small-3 columns">
  <%= f.label :email , class: "right inline"  %></div>
<div class="small-3 columns end">
  <%= f.email_field :email, autofocus: true , :required => true %>
  </div>
</div>
 <div class="row collapse">
  <div class="small-3 small-offset-3 columns end" ><%= f.submit "Resend unlock instructions"  :class => 'small button radius'  %></div>
  </div>
  
<% end %>

<%= render "devise/shared/links" %>
