<%= form_for(@book ,  html: { class: :custom , :multipart => true } ) do |f| %>

<% if @book.errors.any? %>
<div class="form-error-spacer"><ul><% @book.errors.full_messages.each do |msg|	%>
<li><%= msg %></li></div>
<% end %>
<% end %>
<div class="row collapse">
  <div class="small-3 columns">
<%= f.label :bookname, class: "right inline" %></div>
<div class="small-9 columns">
<%=f.text_field :bookname , :required => true  %>

</div>
</div>

<div class="row collapse">
  <div class="small-3 columns">
<%= f.label :author, class: "right inline" %></div>
<div class="small-9 columns">
<%=f.text_field :author  ,:required => true %>
</div>
</div>

<div class="row collapse">
  <div class="small-3 columns">
<%= f.label :category, class: "right inline" %></div>
<div class="small-9 columns">
<%=f.select :category,["technology","literature","politics"] %>
</div>
</div>

<div class="row collapse">
  <div class="small-3 columns">
<%= f.label :price, class: "right inline" %></div>
<div class="small-9 columns">
<%=f.number_field :price ,:required => true %>
</div>
</div>

<div class="row collapse">
  <div class="small-3 columns">
<%= f.label :Type, class: "right inline" %></div>
<div class="small-9 columns">
<%=f.select :booktype,["reference","ebook","standard"] %>
</div>
</div>
<div id="addfile" class="row collapse">
  <div class="small-3 columns">
  <%= f.label :file  , class: "right inline" %></div>
  <div class="small-9 columns ">
  <%=f.file_field :efile  %></div>
  </div>

<div class="row collapse">
  <div class="small-9 small-offset-3 columns" ><%= f.submit  :class => 'small button radius'  %></div>
</div>
<% end %>